<div class="container py-5">
  <div class="row justify-content-center">
    <div class="row">
      <h1>你想對誰說幹話？</h1>
    </div>
  </div>

  <form method="POST" action="/">
    <div class="row card-deck mt-5">
      {{#each tasks}}
      <div class="card col-4 text-center border-0">
        <div class="embed-responsive embed-responsive-4by3">
          <img src="{{this.image}}" class="card-img-top embed-responsive-item" alt="Card image cap">
        </div>
        <div class="card-body">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="title" id="{{this.englishTitle}}"
              value="{{this.chineseTitle}}" {{#if this.selected }} checked {{/if}}>
            <label class="form-check-label" for="{{this.englishTitle}}">
              <h5>{{this.chineseTitle}}</h5>
            </label>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <div class="row">
      <div class="button-wrapper col-2 pl-5 pr-0">
        <button class="btn btn-success mt-5" type="submit">產生幹話</button>
      </div>
      <div class="form-group col-10 justify-content-end basic-textarea rounded-corners pl-0 mt-5">
        <textarea class="form-control" id="outcome" rows="3">{{rubbish}}</textarea>
      </div>
    </div>
  </form>
</div>